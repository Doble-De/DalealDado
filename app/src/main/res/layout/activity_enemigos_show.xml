<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondobad"
    tools:context="com.dalealdado.choised.EnemigosNewActivity">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/etEnombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/infoenemigos"
                android:textColor="@color/colorFondoDados"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/etEraza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/infoenemigos"
                android:textColor="@color/colorFondoDados"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEnombre" />

            <TextView
                android:id="@+id/etEdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/infoenemigos"
                android:textColor="@color/colorFondoDados"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEraza" />

            <TextView
                android:id="@+id/etEvida"
                android:layout_width="60dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:background="@color/infoenemigos"
                android:textColor="@color/colorFondoDados"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvvida"
                app:layout_constraintTop_toBottomOf="@+id/etEdesc" />

            <TextView
                android:id="@+id/tvvida"
                android:layout_width="70dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:text="Vida"
                android:textColor="@color/colorLetrasMadera"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEdesc" />

            <TextView
                android:id="@+id/etEfuerza"
                android:layout_width="60dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:background="@color/infoenemigos"
                android:textColor="@color/colorFondoDados"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvfuerza"
                app:layout_constraintTop_toBottomOf="@+id/etEvida" />

            <TextView
                android:id="@+id/tvfuerza"
                android:layout_width="70dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:text="Fuerza"
                android:textColor="@color/colorLetrasMadera"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvvida" />

            <TextView
                android:id="@+id/etEdefensa"
                android:layout_width="60dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:background="@color/infoenemigos"
                android:textColor="@color/colorFondoDados"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvdefensa"
                app:layout_constraintTop_toBottomOf="@+id/etEfuerza" />

            <TextView
                android:id="@+id/tvdefensa"
                android:layout_width="70dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:text="Defensa"
                android:textColor="@color/colorLetrasMadera"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvfuerza" />

            <TextView
                android:id="@+id/etEevasion"
                android:layout_width="60dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:background="@color/infoenemigos"
                android:textColor="@color/colorFondoDados"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvevasion"
                app:layout_constraintTop_toBottomOf="@+id/etEdefensa" />

            <TextView
                android:id="@+id/tvevasion"
                android:layout_width="70dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:text="Evasion"
                android:textColor="@color/colorLetrasMadera"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvdefensa" />

            <TextView
                android:id="@+id/etEagilidad"
                android:layout_width="60dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:background="@color/infoenemigos"
                android:textColor="@color/colorFondoDados"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvagilidad"
                app:layout_constraintTop_toBottomOf="@+id/etEevasion" />

            <TextView
                android:id="@+id/tvagilidad"
                android:layout_width="70dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:text="Agilidad"
                android:textColor="@color/colorLetrasMadera"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvevasion" />

            <TextView
                android:id="@+id/tvhabilidades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Habilidades"
                android:textColor="@color/colorLetrasMadera"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etdrop" />

            <TextView
                android:id="@+id/etEhabilidades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@color/infoenemigos"
                android:textColor="@color/colorFondoDados"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvhabilidades" />

            <TextView
                android:id="@+id/etEmana"
                android:layout_width="60dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:background="@color/infoenemigos"
                android:textColor="@color/colorFondoDados"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvmana"
                app:layout_constraintTop_toBottomOf="@+id/etEdesc" />


            <TextView
                android:id="@+id/tvmana"
                android:layout_width="70dp"
                android:layout_height="38dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:text="Mana"
                android:textColor="@color/colorLetrasMadera"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/etEvida"
                app:layout_constraintTop_toBottomOf="@+id/etEdesc" />

            <TextView
                android:id="@+id/etEmagia"
                android:layout_width="60dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:background="@color/infoenemigos"
                android:textColor="@color/colorFondoDados"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvmagia"
                app:layout_constraintTop_toBottomOf="@+id/etEmana" />

            <TextView
                android:id="@+id/tvmagia"
                android:layout_width="70dp"
                android:layout_height="38dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:text="Magia"
                android:textColor="@color/colorLetrasMadera"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/etEfuerza"
                app:layout_constraintTop_toBottomOf="@+id/etEmana" />

            <TextView
                android:id="@+id/tvdrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:text="Drop"
                android:textColor="@color/colorLetrasMadera"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/etEdefensa"
                app:layout_constraintTop_toBottomOf="@+id/tvmagia" />

            <TextView
                android:id="@+id/etdrop"
                android:layout_width="161dp"
                android:layout_height="115dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/infoenemigos"
                android:textColor="@color/colorFondoDados"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/etEevasion"
                app:layout_constraintTop_toBottomOf="@+id/tvdrop" />

            <Button
                android:id="@+id/modificar"
                android:layout_width="107dp"
                android:layout_height="44dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="48dp"
                android:background="@color/rojoflojo"
                android:text="Modificar"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEhabilidades" />

            <Button
                android:id="@+id/eliminar"
                android:layout_width="107dp"
                android:layout_height="44dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:background="@color/azulflojo"
                android:text="Eliminar"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEhabilidades" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>